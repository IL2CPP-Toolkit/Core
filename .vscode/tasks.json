{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "${env:VSInstallDir}/MSBuild/Current/Bin/amd64/MSBuild.exe",
            "type": "process",
            "args": [
                "${workspaceFolder}/Core.sln",
                "-m:8",
                "-verbosity:m"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build:test",
            "command": "${env:VSInstallDir}/MSBuild/Current/Bin/amd64/MSBuild.exe",
            "type": "process",
            "args": [
                "${workspaceFolder}\\Test.sln",
                "-m:8",
                "-verbosity:m"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "build:cpp",
            "command": "${env:VSInstallDir}/MSBuild/Current/Bin/amd64/MSBuild.exe",
            "type": "process",
            "args": [
                "${workspaceFolder}/Injection/Host/Host.vcxproj",
                "-m:8",
                "-verbosity:d"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        // {
        //     "label": "build:test",
        //     "command": "dotnet",
        //     "type": "process",
        //     "args": [
        //         "build",
        //         "${workspaceFolder}\\Test\\Test.csproj",
        //         "/property:GenerateFullPaths=true",
        //         "/consoleloggerparameters:NoSummary"
        //     ],
        //     "problemMatcher": "$msCompile",
        // },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/ReverseCompiler.Cli/ReverseCompiler.Cli.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/ReverseCompiler.Cli/ReverseCompiler.Cli.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}